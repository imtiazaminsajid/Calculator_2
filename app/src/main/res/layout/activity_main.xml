<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/et2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:hint="0"
            android:textStyle="italic"
            android:textSize="40dp" />



    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textStyle="bold"
            android:hint="0"
            android:textSize="65dp" />



    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="«"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="C"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="+"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="-"
            android:textSize="25sp"
            android:textStyle="bold"
            />




    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="7"
            />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="8"
            />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="9"
            />

        <Button
            android:id="@+id/multi"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="×"
            />




    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="4"
            />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="5"
            />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="6"
            />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="÷"
            />




    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="1"
            />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="2"
            />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="3"
            />

        <Button
            android:id="@+id/plus_equal"
            android:layout_width="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="±"
            />




    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <Button
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="."
        />

    <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="0"
        />

    <Button
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:background="#6c6666"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="="
        />



    </TableRow>

</TableLayout>